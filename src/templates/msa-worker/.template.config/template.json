{
  "$schema": "http://json.schemastore.org/template",
  "author": "ftechmax",
  "classifications": ["Common", "Worker", "MSA"],
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "name": ".NET worker microservice",
  "description": "A worker microservice solution",
  "identity": "Dotnet.MSA.Worker",
  "shortName": "msa-worker",
  "defaultName": "Worker1",
  "sourceName": "ApplicationName",
  "preferNameDirectory": true,
  "primaryOutputs": [{ "path": "ApplicationName.sln" }],
  "symbols": {
    "DevelopmentRegistry": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{DEV_REGISTRY}}",
      "description": "The fqdn of the docker registry used for development"
    },
    "DevelopmentHostname": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{DEV_HOSTNAME}}",
      "description": "The domain name of the wildcard dns entry for development"
    },
    "ProductionRegistry": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{REGISTRY}}",
      "description": "The fqdn of the docker registry used for production"
    },
    "ProductionHostname": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{HOSTNAME}}",
      "description": "The domain name of the wildcard dns entry for production"
    },
    "RabbitMqSecret": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "rabbitmq-default-user",
      "replaces": "{{RABBITMQ-SECRET-NAME}}",
      "description": "The name of the RabbitMQ secret"
    },
    "MongoDbSecret": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "mongodb-user-password",
      "replaces": "{{MONGODB-SECRET-NAME}}",
      "description": "The name of the MongoDB secret"
    }
  }
}
