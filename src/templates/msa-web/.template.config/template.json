{
  "$schema": "http://json.schemastore.org/template",
  "author": "ftechmax",
  "classifications": ["Web", "WebAPI", "MSA"],
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "name": "Angular web microservice",
  "description": "A web microservice project",
  "identity": "Dotnet.MSA.Web",
  "shortName": "msa-web",
  "defaultName": "web1",
  "sourceName": "ApplicationName",
  "preferNameDirectory": false,
  "symbols": {
    "DevelopmentRegistry": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{DEV_REGISTRY}}",
      "description": "The fqdn of the docker registry used for development"
    },
    "DevelopmentHostname": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{DEV_HOSTNAME}}",
      "description": "The domain name of the wildcard dns entry for development"
    },
    "ProductionRegistry": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{REGISTRY}}",
      "description": "The fqdn of the docker registry used for production"
    },
    "ProductionHostname": {
      "isRequired": true,
      "type": "parameter",
      "datatype": "string",
      "replaces": "{{HOSTNAME}}",
      "description": "The domain name of the wildcard dns entry for production"
    }
  }
}
